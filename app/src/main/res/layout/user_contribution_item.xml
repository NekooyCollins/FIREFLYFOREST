<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Alice"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/user_likes_counter"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/user_likes_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/user_hates_counter"
            android:layout_centerInParent="true"
            android:layout_marginEnd="50dp"
            tools:text="20"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_btn_hate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/user_hates_counter"
            android:src="@drawable/dislike" />

        <TextView
            android:id="@+id/user_hates_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            tools:text="40"
            android:textSize="12sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/user_contribute_para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:text="你好,喂" />

</LinearLayout>
